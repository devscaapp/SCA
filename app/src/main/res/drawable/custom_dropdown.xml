<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Rectangle background with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- No background color -->
            <stroke
                android:width="2dp"
            android:color="#FF5722" />
            <corners android:radius="8dp" /> <!-- Corner radius (adjust as needed) -->
        </shape>
    </item>
    <!-- Arrow icon -->
    <item
        android:right="8dp"
    android:gravity="end|center_vertical">
    <bitmap android:src="@drawable/gridicons_dropdown" />
</item>
    </layer-list>