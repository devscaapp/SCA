<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SignUP">




<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/imageViewLogoSU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ornament"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewBackgroundSU"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:src="@drawable/circle___back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textViewRegisterSU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Account"
        android:textColor="#000000"
        android:textSize="@dimen/_29ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="@+id/imageViewLogoSU"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewRegisterSU2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Setup-2/2"
        android:textColor="#000000"
        android:textSize="@dimen/_29ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="@+id/imageViewLogoSU"
        app:layout_constraintTop_toBottomOf="@id/textViewRegisterSU" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/UploadImgAndId1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/curved_layout"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/textViewRegisterSU2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ShowImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/UploadImgAndId2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/curved_layout"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/UploadImgAndId1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ShowImage2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/UploadImgAndId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@id/buttonRegisterSU"
        app:layout_constraintTop_toBottomOf="@id/UploadImgAndId2"
        app:layout_constraintVertical_bias="0.067"
        tools:layout_editor_absoluteX="-31dp">


    <EditText
                android:id="@+id/RegistrationNumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_44sdp"
                android:background="@drawable/btn_background"
                android:backgroundTint="@color/lightgreen"

                android:text="Registration Number"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="15dp"
                android:textColor="@color/TextColor"
                />
            <EditText
                android:id="@+id/RollNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_44sdp"
                android:background="@drawable/btn_background"
                android:backgroundTint="@color/lightgreen"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/RegistrationNumber"
                android:text="Roll. NO"
                android:padding="15dp"
                android:textColor="@color/TextColor"
                />
            <EditText
                android:id="@+id/City"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_44sdp"
                android:background="@drawable/btn_background"
                android:backgroundTint="@color/lightgreen"
                android:layout_marginTop="20dp"
                android:text="City"
                app:layout_constraintTop_toBottomOf="@id/RollNo"
                android:padding="15dp"
                android:textColor="@color/TextColor"
                />
            <EditText
                android:id="@+id/State"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_44sdp"
                android:background="@drawable/btn_background"
                android:backgroundTint="@color/lightgreen"
                app:layout_constraintTop_toBottomOf="@id/City"
                android:layout_marginTop="20dp"
                android:text="State"
                android:padding="15dp"
                android:textColor="@color/TextColor"
                />
            <EditText
                android:id="@+id/linkedln"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_44sdp"
                android:background="@drawable/btn_background"
                android:backgroundTint="@color/lightgreen"
                android:layout_marginTop="20dp"
                android:text="Linkedln Link"
                app:layout_constraintTop_toBottomOf="@id/State"
                android:padding="15dp"
                android:textColor="@color/TextColor"
                />
            <EditText
                android:id="@+id/Github"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_44sdp"
                android:background="@drawable/btn_background"
                android:backgroundTint="@color/lightgreen"
                android:textColor="@color/TextColor"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/linkedln"
                android:text="Github link"
                android:padding="15dp"
                />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/buttonRegisterSU"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_44sdp"
        android:layout_margin="20dp"
        android:background="@drawable/btn_background"
        android:padding="10dp"
        android:text="Register"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintVertical_bias="0.886" />




</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>