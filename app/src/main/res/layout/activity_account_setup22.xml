<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AccountSetup2_2">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/imageViewLogoSU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ornament"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewBackgroundSU"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:src="@drawable/circle___back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textViewRegisterSU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="156dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Account"
        android:textColor="#000000"
        android:textSize="@dimen/_29ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="@+id/imageViewLogoSU"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewRegisterSU2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Setup-2/2"
        android:textColor="#000000"
        android:textSize="@dimen/_29ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="@+id/imageViewLogoSU"
        app:layout_constraintTop_toBottomOf="@id/textViewRegisterSU" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/UploadImgAndId1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/curved_layout"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/textViewRegisterSU2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ShowImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:autofillHints=""
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/UploadImgAndId2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/curved_layout"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/UploadImgAndId1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ShowImage2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/UploadImgAndId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@id/buttonRegisterSU"
        app:layout_constraintTop_toBottomOf="@id/UploadImgAndId2"
        app:layout_constraintVertical_bias="0.067"
        tools:layout_editor_absoluteX="-31dp">


    <EditText
                android:id="@+id/RegistrationNumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_44sdp"
                android:background="@drawable/custon_input"
                android:drawableLeft="@drawable/custom_register_icon"
                android:drawablePadding="15dp"


                android:hint="Registration Number"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="15dp"
                android:textColor="@color/TextColor"
                />
            <EditText
                android:id="@+id/RollNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_44sdp"
                android:background="@drawable/custon_input"
                android:drawableLeft="@drawable/custom_roll_icon"
                android:drawablePadding="15dp"

                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/RegistrationNumber"
                android:hint="Roll. NO"
                android:padding="15dp"
                android:textColor="@color/TextColor"
                />

        <Spinner
            android:id="@+id/batch_spin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:entries="@array/Batch"
            android:background="@drawable/custom_reg_spinner"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/RollNo"
            tools:layout_editor_absoluteX="20dp" />
        <Spinner
            android:id="@+id/year_spin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:background="@drawable/custom_reg_spinner"
            android:entries="@array/Year"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/batch_spin"
            tools:layout_editor_absoluteX="20dp" />

        <EditText
            android:id="@+id/City"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custon_input"
            android:drawableLeft="@drawable/custom_house_icon"
            android:drawablePadding="15dp"
            android:hint="City"
            android:padding="15dp"
            android:textColor="@color/TextColor"
            app:layout_constraintTop_toBottomOf="@+id/year_spin"
            tools:layout_editor_absoluteX="20dp" />
            <EditText
                android:id="@+id/State"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_44sdp"
                android:background="@drawable/custon_input"
                android:drawableLeft="@drawable/custom_location_icon"
                android:drawablePadding="15dp"

                app:layout_constraintTop_toBottomOf="@id/City"
                android:layout_marginTop="20dp"
                android:hint="State"
                android:padding="15dp"
                android:textColor="@color/TextColor"
                />
            <EditText
                android:id="@+id/linkedln"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_44sdp"
                android:background="@drawable/custon_input"
                android:drawableLeft="@drawable/linkdln"
                android:drawablePadding="15dp"

                android:layout_marginTop="20dp"
                android:hint="Linkedln Link"
                app:layout_constraintTop_toBottomOf="@id/State"
                android:padding="15dp"
                android:textColor="@color/TextColor"
                />
            <EditText
                android:id="@+id/Github"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_44sdp"
                android:background="@drawable/custon_input"
                android:drawableLeft="@drawable/github"
                android:drawablePadding="15dp"

                android:textColor="@color/TextColor"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/linkedln"
                android:hint="Github link"
                android:padding="15dp"
                />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
            android:id="@+id/time_button_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:flexWrap="wrap"
            app:toggle_selectableAmount="11"
            app:toggle_requiredAmount="0"
            app:toggle_selectAnimation="circular_reveal"
            app:layout_constraintTop_toBottomOf="@id/Github"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            > <!-- this attribute is from the underlying FlexboxLayout -->

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:layout_margin="10dp"
                android:id="@+id/android"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_44sdp"
                app:toggle_text="Android Dev"
                app:toggle_backgroundColor="@color/Themelightgreen"
                app:toggle_selectedBackgroundColor="@color/themedarkgreen"/>

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:layout_margin="10dp"
                android:id="@+id/web_dev"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_44sdp"
                app:toggle_text="Web Dev"
                app:toggle_backgroundColor="@color/Themelightgreen"
                app:toggle_selectedBackgroundColor="@color/themedarkgreen"/>

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:layout_margin="10dp"
                android:id="@+id/ai_ml"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_44sdp"
                app:toggle_text="AI ML"
                app:toggle_backgroundColor="@color/Themelightgreen"
                app:toggle_selectedBackgroundColor="@color/themedarkgreen"/>

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:layout_margin="10dp"
                android:id="@+id/devops"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_44sdp"
                app:toggle_text="Devops"
                app:toggle_backgroundColor="@color/Themelightgreen"
                app:toggle_selectedBackgroundColor="@color/themedarkgreen"/>


            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:layout_margin="10dp"
                android:id="@+id/cybersecurity"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_44sdp"
                app:toggle_text="Cyber Sec"
                app:toggle_backgroundColor="@color/Themelightgreen"
                app:toggle_selectedBackgroundColor="@color/themedarkgreen"/>


            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:layout_margin="10dp"
                android:id="@+id/networking"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_44sdp"
                app:toggle_text="networking"
                app:toggle_backgroundColor="@color/Themelightgreen"
                app:toggle_selectedBackgroundColor="@color/themedarkgreen"/>


            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:layout_margin="10dp"
                android:id="@+id/fullstack"
                android:layout_width="wrap_content"

                android:layout_height="@dimen/_44sdp"
                app:toggle_text="Full Stack Web"
                app:toggle_backgroundColor="@color/Themelightgreen"
                app:toggle_selectedBackgroundColor="@color/themedarkgreen"/>

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:layout_margin="10dp"
                android:id="@+id/python"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_44sdp"
                app:toggle_text="Python"
                app:toggle_backgroundColor="@color/Themelightgreen"
                app:toggle_selectedBackgroundColor="@color/themedarkgreen"/>

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:layout_margin="10dp"
                android:id="@+id/flutter"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_44sdp"
                app:toggle_text="Flutter"
                app:toggle_backgroundColor="@color/Themelightgreen"
                app:toggle_selectedBackgroundColor="@color/themedarkgreen"/>

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:layout_margin="10dp"
                android:id="@+id/cloudcomp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_44sdp"
                app:toggle_text="Clout computing"
                app:toggle_textColor="@color/black"
                app:toggle_backgroundColor="@color/Themelightgreen"
                app:toggle_selectedBackgroundColor="@color/themedarkgreen"/>

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:layout_margin="10dp"
                android:id="@+id/other"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_44sdp"
                app:toggle_text="other"
                app:toggle_backgroundColor="@color/Themelightgreen"
                app:toggle_selectedBackgroundColor="@color/themedarkgreen"/>

        </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/buttonRegisterSU"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_44sdp"
        android:layout_margin="20dp"
        android:background="@drawable/btn_background"
        android:padding="10dp"
        android:text="Register"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintVertical_bias="0.886" />




</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>